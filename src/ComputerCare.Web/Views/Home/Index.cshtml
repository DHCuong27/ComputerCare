@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<div class="card shadow-custom mb-4">
    <div class="card-body text-center py-5" style="background: linear-gradient(135deg, var(--primary-blue), var(--accent-teal)); color: white;">
        <h1 class="display-3 fw-bold text-white">
            <i class="fas fa-computer"></i> ComputerCare
        </h1>
        <p class="lead text-white">Cửa hàng máy tính uy tín - Giá tốt - Chất lượng</p>
        <div class="mt-4">
            <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg me-2">
                <i class="fas fa-shopping-cart"></i> Mua sắm ngay
            </a>
            <a asp-controller="Services" asp-action="Index" class="btn btn-outline-light btn-lg">
                <i class="fas fa-tools"></i> Dịch vụ sửa chữa
            </a>
        </div>
    </div>
</div>

<!-- Features -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-shipping-fast fa-3x text-primary-blue"></i>
                </div>
                <h5>Giao hàng nhanh chóng</h5>
                <p class="text-muted">Giao hàng toàn quốc trong 1-2 ngày</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-shield-alt fa-3x text-primary-blue"></i>
                </div>
                <h5>Bảo hành chính hãng</h5>
                <p class="text-muted">Bảo hành 1-3 năm, hỗ trợ 24/7</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-tools fa-3x text-primary-blue"></i>
                </div>
                <h5>Dịch vụ sửa chữa</h5>
                <p class="text-muted">Sửa chữa chuyên nghiệp, uy tín</p>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products Section -->
<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-fire"></i> Sản phẩm nổi bật</h2>
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
            Xem tất cả <i class="fas fa-arrow-right"></i>
        </a>
    </div>
    
    <div class="row">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-microchip fa-4x text-primary-blue mb-3"></i>
                    <h5 class="card-title">CPU Intel Core i5</h5>
                    <p class="text-muted">6 nhân 12 luồng</p>
                    <h4 class="text-primary-blue">3.690.000 ₫</h4>
                    <a href="#" class="btn btn-primary btn-sm mt-2">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-memory fa-4x text-primary-blue mb-3"></i>
                    <h5 class="card-title">RAM DDR4 16GB</h5>
                    <p class="text-muted">3200MHz</p>
                    <h4 class="text-primary-blue">1.290.000 ₫</h4>
                    <a href="#" class="btn btn-primary btn-sm mt-2">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-hdd fa-4x text-primary-blue mb-3"></i>
                    <h5 class="card-title">SSD 500GB</h5>
                    <p class="text-muted">NVMe M.2</p>
                    <h4 class="text-primary-blue">1.190.000 ₫</h4>
                    <a href="#" class="btn btn-primary btn-sm mt-2">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-desktop fa-4x text-primary-blue mb-3"></i>
                    <h5 class="card-title">Màn hình 24"</h5>
                    <p class="text-muted">Full HD IPS</p>
                    <h4 class="text-primary-blue">2.490.000 ₫</h4>
                    <a href="#" class="btn btn-primary btn-sm mt-2">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="card shadow-custom">
    <div class="card-body">
        <h2 class="mb-4"><i class="fas fa-tools"></i> Dịch vụ của chúng tôi</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-wrench fa-2x text-primary-blue"></i>
                    </div>
                    <div>
                        <h5>Sửa chữa máy tính</h5>
                        <p class="text-muted mb-0">Sửa chữa tận nơi, nhanh chóng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-cogs fa-2x text-primary-blue"></i>
                    </div>
                    <div>
                        <h5>Lắp ráp PC</h5>
                        <p class="text-muted mb-0">Tư vấn cấu hình phù hợp</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-broom fa-2x text-primary-blue"></i>
                    </div>
                    <div>
                        <h5>Bảo trì định kỳ</h5>
                        <p class="text-muted mb-0">Vệ sinh, tối ưu hiệu năng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
