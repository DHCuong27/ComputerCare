@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-shopping-bag"></i> Đơn hàng của tôi</h2>
        <hr />
        
        <div class="card shadow-custom">
            <div class="card-body text-center py-5">
