@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-box"></i> Quản lý sản phẩm</h2>
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </button>
    </div>
</div>

<!-- Filters -->
<div class="row mb-3">
    <div class="col-md-3">
        <select class="form-select">
            <option>Tất cả danh mục</option>
            <option>CPU</option>
            <option>RAM</option>
            <option>SSD</option>
            <option>VGA</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select">
            <option>Tất cả trạng thái</option>
            <option>Đang bán</option>
            <option>Hết hàng</option>
            <option>Ngừng kinh doanh</option>
        </select>
    </div>
    <div class="col-md-6">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm...">
            <button class="btn btn-outline-secondary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="card shadow-custom">
    <div class="card-body">
        <table class="table data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên sản phẩm</th>
                    <th>Danh mục</th>
                    <th>Giá</th>
                    <th>Tồn kho</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#P001</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-microchip fa-2x text-primary-blue me-2"></i>
                            <div>
                                <strong>Intel Core i5-12400F</strong><br>
                                <small class="text-muted">SKU: CPU-I5-12400F</small>
                            </div>
                        </div>
                    </td>
                    <td>CPU</td>
                    <td>3.690.000 ₫</td>
                    <td>50</td>
                    <td><span class="badge bg-success">Đang bán</span></td>
                    <td>
                        <button class="btn btn-view btn-action"><i class="fas fa-eye"></i></button>
                        <button class="btn btn-edit btn-action"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-delete btn-action"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                <tr>
                    <td>#P002</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-microchip fa-2x text-primary-blue me-2"></i>
                            <div>
                                <strong>AMD Ryzen 5 5600X</strong><br>
                                <small class="text-muted">SKU: CPU-R5-5600X</small>
                            </div>
                        </div>
                    </td>
                    <td>CPU</td>
                    <td>4.290.000 ₫</td>
                    <td>30</td>
                    <td><span class="badge bg-success">Đang bán</span></td>
                    <td>
                        <button class="btn btn-view btn-action"><i class="fas fa-eye"></i></button>
                        <button class="btn btn-edit btn-action"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-delete btn-action"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                <tr>
                    <td>#P003</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-memory fa-2x text-primary-blue me-2"></i>
                            <div>
                                <strong>Corsair Vengeance RGB 16GB</strong><br>
                                <small class="text-muted">SKU: RAM-CV-16GB</small>
                            </div>
                        </div>
                    </td>
                    <td>RAM</td>
                    <td>1.890.000 ₫</td>
                    <td>0</td>
                    <td><span class="badge bg-danger">Hết hàng</span></td>
                    <td>
                        <button class="btn btn-view btn-action"><i class="fas fa-eye"></i></button>
                        <button class="btn btn-edit btn-action"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-delete btn-action"><i class="fas fa-trash"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
        
        <!-- Pagination -->
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Trước</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
