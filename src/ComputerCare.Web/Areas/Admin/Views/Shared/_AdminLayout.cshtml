@using Microsoft.AspNetCore.Identity
@using ComputerCare.Infrastructure.Identity
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="admin-sidebar bg-primary-blue text-white">
            <div class="p-3">
                <h4><i class="fas fa-cog"></i> Admin Panel</h4>
            </div>
            <nav class="nav flex-column">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-chart-line"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-box"></i> Sản phẩm
                </a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-shopping-bag"></i> Đơn hàng
                </a>
                <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-tools"></i> Dịch vụ
                </a>
                <a asp-area="Admin" asp-controller="Repairs" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-wrench"></i> Sửa chữa
                </a>
                <a asp-area="Admin" asp-controller="Customers" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-users"></i> Khách hàng
                </a>
                
                @if (User.IsInRole("SuperAdmin"))
                {
                    <hr class="bg-white">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link text-white">
                        <i class="fas fa-user-shield"></i> Quản lý users
                    </a>
                }
                
                <hr class="bg-white">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white">
                    <i class="fas fa-home"></i> Về trang chủ
                </a>
            </nav>
        </aside>
        
        <!-- Main Content -->
        <div class="flex-grow-1">
            <header class="bg-white shadow-sm p-3">
                <div class="d-flex justify-content-between">
                    <h5>@ViewData["Title"]</h5>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle"></i> @User.Identity?.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                    <button class="dropdown-item">Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>
            
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
